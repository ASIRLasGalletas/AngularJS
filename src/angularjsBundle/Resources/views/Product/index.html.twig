{% extends 'angularjsBundle::admin.html.twig' %}

{% block navigation %}
    {{ parent() }}
    <li><a href="{{ path('product') }}">Product</a></li>
{% endblock %}

{% block content %}
    <h1>Product list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Shine</th>
                <th>Price</th>
                <th>Rarity</th>
                <th>Hardness</th>
                <th>Faces</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.shine }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.rarity }}</td>
                <td>{{ entity.hardness }}</td>
                <td>{{ entity.faces }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
